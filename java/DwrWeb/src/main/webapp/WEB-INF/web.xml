<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/app-context.xml
		</param-value>
	</context-param>
	<!-- 
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	 -->
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>
			org.apache.struts.action.ActionServlet
		</servlet-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>
				/WEB-INF/struts-config.xml
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>actionHandler</servlet-name>
		<servlet-class>org.springframework.web.context.support.HttpRequestHandlerServlet</servlet-class>
		<init-param>
			<param-name>urlPrefix</param-name>
			<param-value>excpicon</param-value>
		</init-param>
	</servlet>
	
	<servlet>
		<servlet-name>actionServlet</servlet-name>
		<servlet-class>com.e2.web.servlet.ActionServlet</servlet-class>
		<init-param>
			<param-name>urlPrefix</param-name>
			<param-value>excpicon</param-value>
		</init-param>
	</servlet>
	
	<servlet>
		<servlet-name>actionServletWire</servlet-name>
		<servlet-class>com.e2.web.servlet.ActionServletWired</servlet-class>
		<init-param>
			<param-name>urlPrefix</param-name>
			<param-value>excpicon</param-value>
		</init-param>
	</servlet>
		
	<servlet-mapping>
		<servlet-name>actionHandler</servlet-name>
		<url-pattern>/startHandle</url-pattern>
	</servlet-mapping>	
		
	<servlet-mapping>
		<servlet-name>actionServlet</servlet-name>
		<url-pattern>/startServlet</url-pattern>
	</servlet-mapping>	
	
	<servlet-mapping>
		<servlet-name>actionServletWire</servlet-name>
		<url-pattern>/startServletWire</url-pattern>
	</servlet-mapping>
		
	<!--   -->
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
</web-app>
