<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	
	<persistence-unit name="all" transaction-type="RESOURCE_LOCAL">
		<class>com.iex.tv.domain.BaseEntity</class>
		<class>com.iex.tv.domain.IdEntity</class>
		<class>com.iex.tv.domain.system.SystemProperty</class>

		<class>com.iex.tv.domain.customer.CreateDateEntity</class>
		<class>com.iex.tv.domain.customer.Agent</class>
		<class>com.iex.tv.domain.customer.Skill</class>
		<class>com.iex.tv.domain.customer.Address</class>
		<class>com.iex.tv.domain.customer.Phone</class>
		<shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
	</persistence-unit>
		
	<persistence-unit name="cust" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.iex.tv.domain.BaseEntity</class>
		<class>com.iex.tv.domain.customer.CreateDateEntity</class>
		<class>com.iex.tv.domain.customer.Agent</class>
		<class>com.iex.tv.domain.customer.Skill</class>
		<class>com.iex.tv.domain.customer.Address</class>
		<class>com.iex.tv.domain.customer.Phone</class>
		<shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
	</persistence-unit>
	
	<persistence-unit name="system" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.iex.tv.domain.IdEntity</class>
		<class>com.iex.tv.domain.system.SystemProperty</class>
		<shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
		<properties>
       		<property name="javax.persistence.query.timeout" value="3000"/>
    	</properties>		
	</persistence-unit>
</persistence>
