<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="cacheMapConfigFactgoryBean"
		class="com.iex.tv.caching.service.hashmap.CacheMapConfigFactgoryBean">
		<property name="configLocation" value="classpath:cachemap-config-context.xml" />
		<property name="shared" value="true" />
		<property name="cacheManagerName" value="defaultManagerName" />
	</bean>

	<bean id="cacheManager" factory-bean="ehCacheManagerFactoryBean"
		factory-method="getCacheManager" />
</beans>
